<!DOCTYPE html>
<html>
    <head>
    <title>QUnit Tests</title>
    <link rel="stylesheet" href=@Href("~/content/qunit.css") />
    <script type="text/javascript" src=@Href("~/scripts/jquery-1.7.1.min.js")></script>
    <script type="text/javascript" src=@Href("~/scripts/qunit.js")></script>
    @RenderBody()
    </head>
    <body>
        <h1 id="qunit-header">Run All QUnit Tests</h1>
        <h2 id="qunit-banner"></h2>
        <div id="qunit-testrunner-toolbar"></div>
        <h2 id="qunit-userAgent"></h2>
        <ol id="qunit-tests"></ol>
        <div id="qunit-fixture">test markup, will be hidden</div>
    </body>
</html>